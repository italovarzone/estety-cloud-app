{
  "version": 2,
  "builds": [
    {
      "src": "project-root/mongodb.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "project-root/mongodb.js"
    },
    {
      "src": "/(.*)",
      "dest": "/public/$1"
    }
  ]
}
